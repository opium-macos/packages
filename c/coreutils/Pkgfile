name='coreutils'
description="Basic file, shell and text manipulation utilities of the GNU operating system."
homepage="https://www.gnu.org/software/coreutils/"
version="8.31"

sources=("https://ftp.gnu.org/pub/gnu/coreutils/coreutils-${version}.tar.xz")
sha256=("SKIP")

add_option "--with-libgmp" "Compile coreutils using GNU libgmp" "libgmp"
add_option "--with-libpcap" "Compile coreutils using libcap" "libpcap"

build() {
    cd "$name-$version"
    if has_option "with-gmp"
    then
        ./configure --prefix="$prefix" --program-prefix=g
    else
        ./configure --prefix="$prefix" --program-prefix=g --without-gmp
    fi
    make
    make install
}
